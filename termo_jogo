        <button>Y</button>
        <button>Z</button>
        <button class="prr">Apagar</button>
        <button class="prr">Enter</button>
    </section>
    
    <script>
        const botoes = document.querySelectorAll('#letras button');
        const inputs = document.querySelectorAll('#palavras input');
        let posicaoAtual = 0;
        let tentativaAtual = 0;
        const palavra = "JESUS";
        let ganhou = 0;
        
        
        function enter() {
        const inputs = document.querySelectorAll('input');
        for (let i = 0; i < inputs.length; i++) {
    inputs[i].addEventListener("keydown", (e) => {
      if (e.key === 'Enter') {
        if ((posicaoAtual - tentativaAtual * 5) === 5) {
                        let tentativa = '';
                        for (let i = 0; i < 5; i++) {
                            const index = tentativaAtual * 5 + i;
                            tentativa += inputs[index].value.toUpperCase();
                        }
    
                        for (let i = 0; i < 5; i++) {
                            const index = tentativaAtual * 5 + i;
                            const letraTentativa = tentativa[i];
                            const letraCorreta = palavra[i];
    
                            if (letraTentativa === letraCorreta) {
                                inputs[index].style.backgroundColor = 'green';
                            } else if (palavra.includes(letraTentativa)) {
                                inputs[index].style.backgroundColor = 'orange';
                            } else {
                                inputs[index].style.backgroundColor = 'dimgray';
                            }
                        }
    
                        if (tentativa === palavra) {
                            ganhou = 1;
                            
                            document.body.style.backgroundColor = '#72716d';
                            if(tentativaAtual === 0){
                                setTimeout(() => {
                                alert("DE PRIMEIRA!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 1){
                                setTimeout(() => {
                                alert("ISSO AI!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 2){
                                setTimeout(() => {
                                alert("BOA!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 3){
                                setTimeout(() => {
                                alert("Parabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 4){
                                setTimeout(() => {
                                alert("QUASE!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 5){
                                setTimeout(() => {
                                alert("UFA!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                        }
    
                        tentativaAtual++;
                    }
      }
    });
  }
}
enter();
        
        
        
        
        botoes.forEach(botao => {
            botao.addEventListener('click', () => {
                const letra = botao.textContent;
    
                if (letra === 'Apagar') {
                    if (posicaoAtual > tentativaAtual * 5 && ganhou !== 1) {
                        posicaoAtual--;
                        inputs[posicaoAtual].value = '';
                    }
                } else if (letra === 'Enter') {
                    if ((posicaoAtual - tentativaAtual * 5) === 5) {
                        let tentativa = '';
                        for (let i = 0; i < 5; i++) {
                            const index = tentativaAtual * 5 + i;
                            tentativa += inputs[index].value.toUpperCase();
                        }
    
                        for (let i = 0; i < 5; i++) {
                            const index = tentativaAtual * 5 + i;
                            const letraTentativa = tentativa[i];
                            const letraCorreta = palavra[i];
    
                            if (letraTentativa === letraCorreta) {
                                inputs[index].style.backgroundColor = 'green';
                            } else if (palavra.includes(letraTentativa)) {
                                inputs[index].style.backgroundColor = 'orange';
                            } else {
                                inputs[index].style.backgroundColor = 'dimgray';
                            }
                        }
    
                        if (tentativa === palavra) {
                            ganhou = 1;
                            
                            document.body.style.backgroundColor = '#72716d';
                            if(tentativaAtual === 0){
                                setTimeout(() => {
                                alert("DE PRIMEIRA!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 1){
                                setTimeout(() => {
                                alert("ISSO AI!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 2){
                                setTimeout(() => {
                                alert("BOA!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 3){
                                setTimeout(() => {
                                alert("Parabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 4){
                                setTimeout(() => {
                                alert("QUASE!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                            if(tentativaAtual === 5){
                                setTimeout(() => {
                                alert("UFA!\nParabéns! Você acertou a palavra!");
                            }, 100);
                            }
                        }
    
                        tentativaAtual++;
                    }
                } else {
                    if (posicaoAtual < inputs.length && (posicaoAtual - tentativaAtual * 5) < 5 && ganhou !== 1) {
                        inputs[posicaoAtual].value = letra;
                        posicaoAtual++;
                    }
                }
            });
        });  
    </script>
